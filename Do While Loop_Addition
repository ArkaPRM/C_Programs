#include <stdio.h>
#include <conio.h>
void main ()
{
  char ch;
  int a, b, sum;
  do
    {
      printf ("Enter 1st Number ");
      scanf ("%d", &a);
      printf ("Enter 2nd Number ");
      scanf ("%d", &b);
      sum = a + b;
      printf ("The Sum is %d", sum);
      printf ("\n\n\nDo you want to do this again (y/n)? ");
      scanf (" %c", &ch);
    }
  while (ch == 'y');
}
