#include <stdio.h>
#include <conio.h>
void main ()
{
  char name[30];
  int i, l = 0;
  printf ("Enter your name please ");
  scanf ("%s", &name);
  for (i = 0; name[i] != '\0'; i++)
    l = l + 1;
  printf ("Length of the string is %d\n\n", l);
  for (i = l - 1; i >= 0; i--)
    printf ("%c", name[i]);
}
